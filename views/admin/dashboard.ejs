<% include('../layouts/header.ejs') %>

    <h1>Dashboard</h1>
    <a href="/admin/new-user">Add New User</a>
    <br><br>

    <table style="width:50%; border-spacing: 15px;">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Verified</th>
            <th>Action</th>

        </tr>

        <% if(users.length> 0){
            for(let i=0; i<users.length; i++){ %>
                <tr>
                    <td><img style="border-radius: 50%;" src="/userImages/<%=users[i].image%>" alt="<%=users[i].image%>"
                            width="50%" height="50%"></td>
                    <td>
                        <%=users[i].name%>
                    </td>
                    <td>
                        <%=users[i].email%>
                    </td>
                    <td>
                        <%=users[i].mobile%>
                    </td>

                    <%if(users[i].is_varified==0){ %>
                        <td>Not Verified</td>
                        <%}else{ %>
                            <td>Verified</td>
                            <% } %>
                        <td>
                            <a href="/admin/edit-user?id=<%=users[i]._id%>">Edit</a>
                            <a href="/admin/delete-user?id=<%=users[i]._id%>">Delete</a></td>


                </tr>
                <% } } else{ %>
                    <tr>
                        <td colspan="5">Users Not Found</td>
                    </tr>
                    <% } %>

    </table>
    <br>




    <a href="/admin/home">Go to home</a>

    <% include('../layouts/footer.ejs') %>