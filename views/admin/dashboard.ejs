
 <%- include('../layouts/header.ejs') -%>
    <!-- Main Site -->
    
        <div class="container">
            <div class="title" style="margin:1em 2em;" >
                <h2 class="font-weight-bold">Dashboard</h2>
                <a href="/admin/new-user"><button type="submit" class="btn btn-success rounded-pill">Add New User</button></a>
                <a href="/admin/home"><button type="submit" class="btn btn-success rounded-pill">Go to Home</button></a>
            </div>
            
    

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Verified</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(users.length> 0){
                            for(let i=0; i<users.length; i++){ %>
                                <tr>
                                    <td class="align-middle">
                                        <div class="title">
                                            <img src="/userImages/<%=users[i].image%>" style="border-radius: 20%;" width="100px" height="100px" alt="<%=users[i].image%>"></td>
                                        </div>
                                    <td class="align-middle">
                                        <%=users[i].name%>
                                    </td>
                                    <td class="align-middle">
                                        <%=users[i].email%>
                                    </td>
                                    <td class="align-middle">
                                        <%=users[i].mobile%>
                                    </td>
                
                                    <%if(users[i].is_varified==0){ %>
                                        <td class="align-middle">
                                        Not Verified
                                        </td>
                                        <%}else{ %>
                                            <td class="align-middle">Verified</td>
                                            <% } %>
                                            <td class="align-middle">
                                            <a href="/admin/edit-user?id=<%=users[i]._id%>"><span class="material-symbols-outlined">
                                                edit
                                                </span>
                                            </a>
                                            
                                        </td>
                                        <td class="align-middle">
                                            <a href="/admin/delete-user?id=<%=users[i]._id%>"><span class="material-symbols-outlined" style="color: red;">
                                                delete
                                                </span>
                                            </a>
                                        </td>
                
                
                                </tr>
                                <% } } else{ %>
                                    <tr>
                                        <td class="align-middle"> colspan="5">Users Not Found</td>
                                    </tr>
                                    <% } %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->
<%- include('../layouts/footer.ejs') -%>
