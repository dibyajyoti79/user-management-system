<% include('../layouts/header.ejs') %>

    <h1>Edit User</h1>

    <form action="" method="post">

        <input type="name" name="name" value="<%= user.name%>" placeholder="Enter Name" required>
        <br><br>
        <input type="email" name="email" value="<%= user.email%>" placeholder="Enter Email" required>
        <br><br>
        <input type="text" name="mno" value="<%= user.mobile%>" placeholder="Enter Mobile" required>
        <br><br>
        <label>Verified</label>
        <input type="radio" name="verify" value="1" <% if(user.is_varified == 1){ %>checked <% } %> >
        <label>Unverified</label>
        <input type="radio" name="verify" value="0"  <% if(user.is_varified == 0){ %>checked <% } %>>
        <br><br>
        <input type="hidden" name="id" value="<%= user._id%>">
        <input type="submit" value="Save">

    </form>

    <a href="/admin/dashboard">Go Dashboard  </a>

    
 <% include('../layouts/footer.ejs') %>