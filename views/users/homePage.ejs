<% include('../layouts/header.ejs') %>

    <h3>Welcome, <%= user.name %>
    </h3>

    <table width="50%">
        <tr>
            <td><img style="border-radius: 50%;" width="100px" src="userImages/<%= user.image %>"
                    alt="<%= user.image %>"></td>
        </tr>
        <tr>
            <td>Email</td>
            <td>
                <% if(user.temp_email !=="" ){ %>
                    <%= user.temp_email %>
                        <% }else{ %>

                            <%= user.email %>
                                <% } %>

            </td>
        </tr>
        <tr>
            <td>Mobile</td>
            <td>
                <%= user.mobile %>
            </td>
        </tr>
        <tr>
            <td>Verified</td>
            <td>
                <% if(user.temp_verify===1){ %>
                    <a href="/verify-email/<%= user._id %>">verify</a>
                    <% }else{ %>
                        <p>yes</p>
                        <% }%>

            </td>
        </tr>
    </table>
    <br>
    <a href="/edit?id=<%= user._id %>">Edit</a>
    <br>
    <br>
    <a href="/logout">Logout</a>
    <br>
    <% if(typeof message !== 'undefined' ){ %>
        <p style="color: green;"><%= message %></p>
    <% } %>


    <% include('../layouts/footer.ejs') %>